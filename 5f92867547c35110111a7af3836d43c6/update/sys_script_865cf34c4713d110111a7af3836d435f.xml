        <script><![CDATA[// (function executeRule(current, previous /*null when async*/) {

//calculates "Current status" when a new contribution record is inserted or update
var sum = 0;
var challengeGR = current.challenge.getRefRecord();
var contributionGR = new GlideRecord('x_933239_gvs_sport_contribution');
contributionGR.addQuery('challenge', challengeGR.getUniqueValue());
contributionGR.query();

while (contributionGR.next()) {
    //iterates through related contributions and sums their values
    sum = sum + parseInt(contributionGR.getValue('contribution'), 10);
}

challengeGR.setValue('current_status', sum);
challengeGR.update();]]></script>
